generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid()) @map("_id") // primary key
  name     String?
  email    String    @unique // only unique, NOT @id
  image    String?
  posts    Post[]    @relation("UserPosts")
  comments Comment[] @relation("UserComments")
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String   @unique
  title     String
  desc      String
  img       String
  views     Int
  catSlug   String
  userEmail String
  createdAt DateTime @default(now())

  user     User      @relation("UserPosts", fields: [userEmail], references: [email])
  comments Comment[] @relation("PostComments")
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  desc      String
  createdAt DateTime @default(now())
  userEmail String
  postSlug  String

  user User @relation("UserComments", fields: [userEmail], references: [email])
  post Post @relation("PostComments", fields: [postSlug], references: [slug])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Additional profile fields
  bio           String?
  location      String?
  website       String?
  twitter       String?
  linkedin      String?
  role          String?   @default("Author")
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  Post          Post[]
  Comment       Comment[]
  
  @@map("users")
}